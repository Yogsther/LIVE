extends layout
block content
    .stream-container
      img.stream-image#stream-img(src='img/offline.png', alt='Video stream')
      .chat-container
        .messages
        div.emotes#emotes
        input.chat-input(type='text', placeholder='Chat [ENTER]' oninput="emoteHelp(this)")
      .info-box
        span.title-stream
          .viewers-icon
          span#title-stream No title
        span.viewer-count
          span#viewercount 0
          |  Viewers
        span.description#description-stream
          | This stream has no description
        
block scripts
  script(src="js/stream.js")